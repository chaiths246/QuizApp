<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chaithra.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScoreActivity"
            android:label="Score"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ChechBoxActivity"
            android:label="@string/title_activity_chech_box"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RadioButtonActivity"
            android:label="@string/title_activity_radio_button"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditTextActivity"
            android:label="@string/title_activity_edit_text"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>